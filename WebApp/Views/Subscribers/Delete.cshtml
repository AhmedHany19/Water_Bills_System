@model Subscriber
@{
    ViewData["Title"] = "Remove Subscriber";
}


<section class="content-wrapper">
    <h1>حذف بيانات مشترك</h1>

    <form asp-action="Delete" method="post">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group row">
                <div class="col-7">
                    <label> رقم الهوية</label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>

                <div class="col-7">
                    <label> الاسم</label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>

                <div class="col-7">
                    <label>المدينة</label>
                    <input asp-for="City" class="form-control" type="text" readonly />
                </div>

                <div class="col-7">
                    <label>الحي</label>
                    <input asp-for="Area" class="form-control" type="text" readonly />
                </div>

                <div class="col-7">
                    <label>رقم الجوال</label>
                    <input asp-for="Mobile" class="form-control" type="number" readonly />
                </div>

                <div class="col-7">
                    <label> الملاحظات</label>
                    <input asp-for="Comments" class="form-control" readonly />
                </div>

            </div>
            <h2 class="text-danger"> !!!! هل انت متاكد من حذف هذا المشترك !!!</h2>

            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="حذف" />
                <a asp-action="subscribers" class="btn btn-success">رجوع</a>
            </div>
        </div>
    </form>
</section>
