@model Subscriber
@{
    ViewData["Title"] = "Details";
}


<section class="content-wrapper">
    @if (Model==null)
    {
        <div class="text-center mt-5">
        <h3 class="text-warning">@ViewData["Message"]</h3>
        <a href="/subscribers/subscribers" class="btn btn-primary"> الرجوع لقائمة المشتركين</a>
        </div>

    }
    else
    {
     <h1>تفاصيل المشترك</h1>
     <form asp-action="Edit" method="get">
            <div class="p-4 rounded border">
             <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group row">
                    <div class="col-7">
                        <label> رقم الهوية</label>
                        <input asp-for="Id" class="form-control" readonly />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>

                    <div class="col-7">
                        <label> الاسم</label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>

                    <div class="col-7">
                        <label>المدينة</label>
                        <input asp-for="City" class="form-control" type="text" readonly />
                    </div>

                    <div class="col-7">
                        <label>الحي</label>
                        <input asp-for="Area" class="form-control" type="text" readonly />
                    </div>

                    <div class="col-7">
                        <label>رقم الجوال</label>
                        <input asp-for="Mobile" class="form-control" type="number" readonly />
                    </div>

                    <div class="col-7">
                        <label> الملاحظات</label>
                        <input asp-for="Comments" class="form-control" readonly />
                    </div>

                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="تعديل" />
                    <a asp-action="subscribers" class="btn btn-success">رجوع</a>
                </div>
            </div>
        </form>
    }
   
</section>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }