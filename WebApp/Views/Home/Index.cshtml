 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">لوحة التحكم</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">الصفحة الرئيسية</a></li>
                        <li class="breadcrumb-item active">لوحة التحكم</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>@ViewBag.SubscribersCount</h3>
                            <p>المشتركين</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-bag"></i>
                        </div>
                        <a href="/Subscribers/Subscribers" class="small-box-footer">المزيد<i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>@ViewBag.SubscriptionsCount</h3>

                            <p>الاشتراكات</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="/Subscribtions/Subscribtions" class="small-box-footer">المزيد<i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>@ViewBag.InvoicesCount</h3>

                            <p>الفواتير</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a href="/Invoices/Invoices" class="small-box-footer">المزيد<i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>@ViewBag.RealCount</h3>

                            <p>العقارات</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="/RealEstateTypes/RealEstateType" class="small-box-footer">المزيد<i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
            </div>
            <!-- /.row -->
            <hr />
            <div class="text-center mt-5">
            <h2>يمكنك تسجيل الفاتورة من هنا</h2>
            </div>
            <div>
                <form asp-action="GetSubscriptionById" asp-controller="Invoices" method="get" class="mt-5">
                    <div class="input-group md-form form-sm form-1 pl-0">
                        <div class="input-group-prepend" hidden>
                            <span class="input-group-text purple lighten-3" id="basic-text1">
                                <i class="fas fa-search text-black"
                                   aria-hidden="true"></i>
                            </span>                  
                        </div>
                         <input class="form-control my-0 py-1" name="id" id="id" type="text" placeholder="أدخل رقم الاشتراك " aria-label="Search">
                    </div>
                    <div class="text-center mt-3">
                    <input class="btn btn-secondary btn-lg" type="submit" value=" بحث" />
                    </div>
                </form>
            </div>
           
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->