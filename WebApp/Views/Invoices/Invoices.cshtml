@model InvoicesViewModel
@{
    ViewData["Title"] = "Invoices";
}
<!-- Main content -->
<section class="content-wrapper">
    <div class=" mt-3 ">
        <h2> الفواتير</h2>

        <a class="btn btn-primary mt-3 mb-2 " asp-action="RegisterInvoice">تسجيل فاتورة جديدة</a>
    </div>

    <div>
        <table id="invoicesTable" class="table text-black text-center text-center table-bordered table-hover">
            <thead>
                <tr>
                    <th>رقم الفاتورة </th>
                    <th>رقم الاشتراك</th>
                    <th>رقم المشترك</th>
                    <th>الاسم</th>
                    <th>تاريخ الفاتورة</th>
                    <th>الاستهلاك السابق</th>
                    <th>الاستهلاك الحالي</th>
                    <th>كمية الاستهلاك</th>
                    <th>مجموع الفاتورة</th>
                    <th>اجمالي الفاتورة</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Invoices)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Subscribetion_Id</td>
                        <td>@item.Subscriber_Id</td>
                        <td>@item.Subscriber.Name</td>
                        <td>@item.Date</td>
                        <td>@item.Previous_Consumption_Amount</td>
                        <td>@item.Current_Consumption_Amount</td>
                        <td>@item.Amount_Consumption</td>
                        <td>@item.Total_Invoice</td>
                        <td>@item.Total_Bill</td>
                        <td>
                            <a asp-action="Details" class="btn btn-warning ms-2 " asp-route-Id="@item.Id"><i class="fas fa-arrow-up"></i></a>
                            <a asp-action="Delete" class="btn btn-danger ms-2 " asp-route-Id="@item.Id"><i class="fas fa-trash-alt"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>



</section>
<!-- /.content -->
@section Scripts{
    <script type="text/javascript" src="~/modules/DataTable.js">
        
    </script>


}