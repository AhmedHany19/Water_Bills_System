@model SubscribtionsViewModel
@{
    ViewData["Title"] = "Remove Subscribtion";
}


<section class="content-wrapper">
    <h1>حذف  الاشتراك </h1>

    <form asp-action="Delete" method="post">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group row">
                <div class="col-7">
                    <label> رقم الاشتراك</label>
                    <input asp-for="Subscription.Id" class="form-control" readonly />
                </div>

                <div class="col-7">
                    <label> المشترك</label>
                    <input asp-for="Subscription.Subscriber.Name" class="form-control" readonly />
                </div>

                <div class="col-7">
                    <label>نوع العقار</label>
                    <input asp-for="Subscription.Real_Estate_Type.Name" class="form-control" type="text" readonly />
                </div>

                <div class="col-7">
                    <label>عدد الوحدات</label>
                    <input asp-for="Subscription.No" class="form-control" type="text" readonly />
                </div>

                <div class="col-7">
                    <label>هل يوجد صرف صحي ؟</label>
                    <input asp-for="Subscription.Is_There_Sanitation" class="form-control" type="checkbox" readonly />
                </div>

                <div class="col-7">
                    <label> اخر قراءة</label>
                    <input asp-for="Subscription.Last_Reading_Meter" class="form-control" readonly />
                </div>

            </div>
            <h2 class="text-danger"> !!!! هل انت متاكد من حذف هذا الاشتراك !!!</h2>

            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="حذف" />
                <a asp-action="Subscribtions" class="btn btn-success">رجوع</a>
            </div>
        </div>
    </form>
</section>
