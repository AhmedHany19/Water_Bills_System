@model Real_Estate_Type
@{
    ViewData["Title"] = "Delete";
}


<section class="content-wrapper">
    <h1>حذف العقاار</h1>
    <form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-7">
                 <label> الكود</label>
                 <input asp-for="Id" class="form-control" readonly />
            </div>

            <div class="col-7">
            <label> اسم العقار</label>
            <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="col-7">
             <label> الملاحظات</label>
             <input asp-for="Comments" class="form-control" readonly />
            </div>

        </div>
        <h2 class="text-danger"> !!!! هل انت متاكد من حذف هذا العقار !!!</h2>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="تأكـــيد" />
            <a asp-action="RealEstateType" class="btn btn-success">رجوع</a>
        </div>
    </div>
</form>
</section>