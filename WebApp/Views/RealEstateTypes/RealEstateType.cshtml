@model IEnumerable<Real_Estate_Type>
@{
    ViewData["Title"] = "العقارات";
}

<!-- Main content -->
<section class="content-wrapper">
     <div class=" mt-3 ">
        <h2>العقارات</h2>

       <a class="btn btn-primary mt-3 mb-2 " asp-action="Create" >انشاء عقار جديد</a>
     </div>

        <div>
        <table id="RealEstateTable" class="table text-black text-center table-bordered table-hover">
                <thead>
                    <tr>
                    <th>رمز العقار</th>
                    <th>نوع العقار</th>
                    <th>الملاحظات</th>
                    <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Comments</td>
                    <td>
                       <partial name="_ButtonPartial" model="@item.Id" />
                    </td>
                    </tr>
                }             
                </tbody>
            </table>

        </div>



    </section>
    <!-- /.content -->
@section Scripts{
        <script type="text/javascript" src="~/modules/DataTable.js">
           
        </script>


}