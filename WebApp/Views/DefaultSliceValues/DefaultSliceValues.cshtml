@model IEnumerable<Default_Slice_Value>
@{
    ViewData["Title"] = "DefaultSliceValues";
}

<!-- Main content -->
<section class="content-wrapper">
    <div class=" mt-3 ">
        <h2>توزيعة الشرائح</h2>

        <a class="btn btn-primary mt-3 mb-2 " asp-action="Create">انشاء شريحة جديد</a>
    </div>

    <div>
        <table id="DefaultSliceValuesTable" class="table text-black text-center table-bordered table-hover">
            <thead>
                <tr>
                    <th>رمز الشريحة</th>
                    <th>وصف الشريحة</th>
                    <th>كمية استهلاك الشريحة</th>
                    <th>سعر المتر المكعب من المياة</th>
                    <th>سعر خدمة الصرف الصحي</th>
                    <th>ملاحظات</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Condition</td>
                        <td>@item.Water_Price</td>
                        <td>@item.Sanitation_Price</td>
                        <td>@item.Comments</td>
                        <td>
                            <partial name="_ButtonPartial" model="@item.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>



</section>
<!-- /.content -->
@section Scripts{
            <script type="text/javascript" src="~/modules/DataTable.js"></script>


}